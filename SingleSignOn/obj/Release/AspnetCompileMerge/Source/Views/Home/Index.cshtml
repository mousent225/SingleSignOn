<div id="mdMasterAttachfile" class="modal fade" tabindex="-1" data-width="60%" style="display: none;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4>
            <label>File Attachment</label>
        </h4>
    </div>
    <div class="modal-body" style="height:400px">
        <div id="gridMasterAttachment">
        </div>
    </div>
    <div class="modal-footer">
        <a class=Lbtn href="javascript:;">
            <input type="button" value="Download All" id="btnDownloadAllMaster" />
        </a>
        <a class=Lbtn href="javascript:;">
            <input data-dismiss="modal" type="button" value="Close" />
        </a>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        fnGridNoticesMaster();

        $('.tab > div:eq(0)').show();
        $(".tabs-menu a").click(function (event) {
            event.preventDefault();
            $(this).parent().addClass("Lcurrent");
            $(this).parent().siblings().removeClass("Lcurrent");
            var tab = $(this).attr("href");
            $(".tab-content").not(tab).css("display", "none");
            $(tab).fadeIn();
        });

        $(".p_ul").hide();
        $("#ulti").click(function () {
            if ($(".p_ul").css('display') == 'none')
                $(".p_ul").slideToggle();
            else if ($(".p_ul").css('display') == 'block')
                $(".p_ul").slideToggle();
        });

    });

    var rowSubjectMaster = function (row, column, value, defaultHtml, columnSettings, rowData) {
        return '<div style="margin-left:5px; margin-right:5px">' +
            '<div style="text-align: left; margin-top: 5px;"><a href="#" onclick="showDetail(&#39;' + rowData.Id + '&#39;)" style="color:#343434">' + value + '</a></div>'
        '</div>';
    }

    var attachFileMaster = function (row, column, value, defaultHtml, columnSettings, rowData) {
        return value ? "<a href='#' onclick='showModalMasterAttachment(&#39;" + rowData.Id + "&#39;);'style='padding:10px' >" + "<i class='fa fa-paperclip' aria-hidden='true' style='padding-top:4px; color:#606060'></i></a>"
            : "";
    }

    function fnGridNoticesMaster() {
        var source = {
            datatype: "json",
            datafields: [
                { name: 'Id', type: 'int' },
                { name: 'Subject', type: 'string' },
                { name: 'UpdateName', type: 'string' },
                { name: 'UpdateDate', type: 'date' },
                { name: 'Descript', type: 'string' },
                { name: 'Active', type: 'bool' },
                { name: 'AttachFile', type: 'bool' }
            ],
            url: '/Notices/GetTop10',
            data: "",
        };
        dataAdapter = new $.jqx.dataAdapter(source);
        // create Tree Grid
        $("#gridNoticesMaster").jqxGrid(
        {
            width: "99%",
            height: $('footer').position().top - 350,
            source: dataAdapter,
            rendergridrows: function () {
                return dataAdapter.records;
            },
            enabletooltips: true,
            showHeader: true,
            rowsheight: 22,
            altrows: true,
            columns: [
                { text: 'No', filterable: false, dataField: 'RowIndex', width: 30, cellsrenderer: rowIndex, renderer: colHeaderCenter, editable: false },
                { text: 'File', filterable: false, dataField: 'AttachFile', width: 30, sortable: false, cellsrenderer: attachFileMaster, renderer: colHeaderCenter, editable: false },
                { text: 'Title', filtertype: 'input', dataField: 'Subject', cellsrenderer: rowSubjectMaster, renderer: colHeaderLeft, editable: false },
                { text: 'Author', filterable: false, dataField: 'UpdateName', width: 160, cellsalign: 'left', renderer: colHeaderLeft, editable: false },
                { text: 'Create Date', filterable: false, dataField: 'UpdateDate', width: 90, cellsalign: 'center', cellsformat: 'yyyy.MM.dd', renderer: colHeaderCenter, editable: false }
            ],
            columnsresize: true,
        });
    }
    function showDetail(id) {
        window.location.href = "/Notices/ViewDetail/" + id;
        return true;
    }

    $("#btnDownloadAllMaster").on("click", function () {
        var rows = $("#gridMasterAttachment").jqxGrid("getrows");
        //console.log(rows);
        var files = [];
        rows.forEach(function (row) {
            files.push(row.FilePath);
        })

        var api = "/Notices/GetZipFile";
        $.ajax({
            type: "POST",
            url: api,
            data: JSON.stringify({ files: files }),
            contentType: "application/json; charset=utf-8",
            //dataType: "json",
            async: false,
            success: function (data) {
                if (data !== "") {
                    window.location.href = "/Notices/DownloadFile?fileName=" + data;
                }
            },
            error: function (result) {
                alert('Oh no: ' + result.responseText);
                return false;
            }
        });
    });

    function showModalMasterAttachment(masterId) {
        var attachFile = function (row, column, value, defaultHtml, columnSettings, rowData) {
            return value ? "<a target='_blank' href='" + rowData.FilePath + "' style='padding:10px' ><i class='fa fa-paperclip' aria-hidden='true' style='padding-top:4px; color:#606060'></i></a>"
                : "";
        }

        var attachFileName = function (row, column, value, defaultHtml, columnSettings, rowData) {
            return value ? "<div style='text-align: left; margin-top: 5px;'><a style='color:#343434; cursor:pointer' target='_blank' href='" + rowData.FilePath + "' >" + rowData.FileName + "</a></div>"
                : "";
        }

        var sourceAttachment = {
            datatype: "json",
            datafields: [
                { name: 'FileName', type: 'string' },
                { name: 'FilePath', type: 'string' }
            ],
            url: '/Notices/GetAttachment',
            data: {
                attachment: masterId,
                moduleId: '01e35e18-c660-4e7a-b1f8-f71c1c667f10'
            }
        };

        var dataAdapter = new $.jqx.dataAdapter(sourceAttachment);
        $("#gridMasterAttachment").jqxGrid(
        {
            width: "100%",
            height: "99%",
            source: dataAdapter,
            pageable: false,
            columns: [
                { text: 'No', dataField: 'RowIndex', width: 30, cellsrenderer: rowIndex, renderer: colHeaderCenter },
                { text: 'File', dataField: 'FilePath', width: 30, sortable: false, cellsrenderer: attachFile, renderer: colHeaderLeft },
                { text: 'File Name', dataField: 'FileName', cellsrenderer: attachFileName, renderer: colHeaderLeft }
            ]
        });

        $("#gridMasterAttachment").on('bindingcomplete', function (event) {
            $("#mdMasterAttachfile").modal("show");
        });
    }
</script>
