@model SingleSignOn.ViewModels.UserModel

<div>
    <table class="tb-table">
        <tr>
            <th colspan="2" style="text-align: center">
                @Html.Label("You must to change password before login", new { @class = "label", @style="color: red;" })
            </th>
        </tr>
        <tr>
            <th class="input-require">
                @Html.LabelFor(m => m.PasswordOld, new {@class="label"})
            </th>
            <td>
                @Html.ValidationMessageFor(m => m.PasswordOld)
                @Html.PasswordFor(m => m.PasswordOld, new {@class="input"})
            </td>
        </tr>
        <tr>
            <th class="input-require">
                @Html.LabelFor(m => m.PasswordNew, new { @class = "label" })
            </th>
            <td>
                @Html.ValidationMessageFor(m => m.PasswordOld)
                @Html.PasswordFor(m => m.PasswordNew, new { @class = "input" })
            </td>
        </tr>
        <tr>
            <th class="input-require">
                @Html.LabelFor(m => m.PasswordRepeat, new { @class = "label" })
            </th>
            <td>
                @Html.ValidationMessageFor(m => m.PasswordRepeat)
                @Html.PasswordFor(m => m.PasswordRepeat, new { @class = "input" })
            </td>
        </tr>
    </table>
    <div style="clear:both"></div>
</div>